{
  "name": "@xlor/xparse",
  "version": "1.0.0",
  "description": "A Simple Parser for XLang.",
  "keywords": [
    "parser",
    "compiler",
    "XLang"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LonelyKuma/XParse.git"
  },
  "license": "MIT",
  "author": "XLor",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "xparse": "xparse.mjs"
  },
  "files": [
    "dist",
    "*.mjs"
  ],
  "scripts": {
    "build": "unbuild",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "preversion": "unbuild"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "dependencies": {
    "@xlor/xlex": "^1.0.0",
    "@yjl9903/setmap": "^1.0.6",
    "cac": "^6.7.12",
    "jiti": "^1.13.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.10",
    "bumpp": "^7.1.1",
    "husky": "^4.2.3",
    "lint-staged": "^12.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.3.5",
    "unbuild": "^0.7.2",
    "vitest": "^0.8.1"
  },
  "packageManager": "pnpm@6.32.3"
}
